@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
else
{
    <div>
        <h4>Customer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.Customer.FirstName</dd>

            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.Customer.LastName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Customer.Email</dd>

            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.Customer.PhoneNumber</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Customer.Address</dd>

            <dt class="col-sm-2">Date of Birth</dt>
            <dd class="col-sm-10">@Model.Customer.DateOfBirth.ToShortDateString()</dd>

            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Model.Customer.Gender</dd>
        </dl>

        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </div>
}
